{
  "compilerOptions": {
    // ---- Opções do tsconfig.app.json ----
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "jsx": "react-jsx",
    "strict": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitAny": false,

    // ---- Opções do tsconfig.node.json ----
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,

    // ---- Opções do seu tsconfig.json raiz ----
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "skipLibCheck": true,
    "allowJs": true,
    "strictNullChecks": false,
    "resolveJsonModule": true
  },
  // ---- Unificando o "include" ----
  // Agora ele vai ler tanto o código do app quanto os arquivos de config
  "include": [
    "src",
    "vite.config.ts",
    "tailwind.config.ts",
    "postcss.config.js"
  ]
}